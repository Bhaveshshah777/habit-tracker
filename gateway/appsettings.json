{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Jwt": {
      "Authority": "https://accounts.google.com",
      "Audience": "${GOOGLE_CLIENT_ID}"
    },
    "Google": {
      "ClientId": "${GOOGLE_CLIENT_ID}",
      "ClientSecret": "${GOOGLE_CLIENT_SECRET}",
      "Authority": "https://accounts.google.com",
      "CallbackPath": "/signin-oidc",
      "ResponseType": "id_token token"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "user": {
        "ClusterId": "userCluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/user"
          }
        ]
      },
      "habit": {
        "ClusterId": "habitCluster",
        "Match": {
          "Path": "/habit/{**catch-all}"
        }
      },
      "tracking": {
        "ClusterId": "trackingCluster",
        "Match": {
          "Path": "/tracking/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "userCluster": {
        "Destinations": {
          "ds1": {
            "Address": "http://user-service:80/"
          }
        }
      },
      "habitCluster": {
        "Destinations": {
          "ds1": {
            "Address": "http://habit-service:80/"
          }
        }
      },
      "trackingCluster": {
        "Destinations": {
          "ds1": {
            "Address": "http://tracking-service:80/"
          }
        }
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://+:443",
        "Certificate": {
          "Path": "/https/localhost.p12",
          "Password": "changeit"
        }
      }
    }
  }
}